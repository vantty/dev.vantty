{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@now/node-server"
    }
  ],
  "env": {
    "PORT": "@port",
    "JWT_SECRET": "@jwt-secret",
    "GOOGLE_ID": "@google-id",
    "GOOGLE_SECRET": "@google-secret",
    "MONGODB_URI": "@my-mongodb-uri",
    "FACEBOOK_ID": "@facebook-id",
    "FACEBOOK_SECRET": "@facebook-secret",
    "EMAIL_SECRET": "@email-secret",
    "CLOUDINARY_CLOUD_NAME": "@cloudinary-cloud-name",
    "CLOUDINARY_API_KEY": "@cloudinary-api-key",
    "CLOUDINARY_API_SECRET": "@cloudinary-api-secret",
    "CONFIRMATION_URL": "@confirmation-uri",
    "MAILGUN_USER": "@mailgun-user",
    "MAILGUN_PASS": "@mailgun-pass",
    "STRIPE_SECRET_KEY_TEST": "@stripe-secret-key-test",
    "STRIPE_SECRET_KEY": "@stripe-secret-key",
    "SENDGRID_API_KEY": "@sendgrid-api-key"
  },
  "routes": [{ "src": "/api/.*", "dest": "/index.js" }]
}
